nfam5 = nfam5 + 1;
break;

case 6:
    nfam6 = nfam6 + 1;
    break;
   
       default:
    nfam = nfam +1;
    break;
}

switch (curso){
case 'E':
if ((idade >= 18) && (idade <= 22) && (familia >= 3) && (familia <= 4 && renda > 1800)){
qnte = qnte + 1;
}
break;
case 'H':
if ((idade >= 18) && (idade <= 22) && (familia >= 3) && (familia <= 4 && renda > 1800)){
qnth = qnth + 1;
}
