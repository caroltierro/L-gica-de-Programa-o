#include<stdio.h>
#include<stdlib.h>

 float novaterra = 5000000;
 float novomonte = 7000000; 
 int anos = 0;
 int i;

main(){

for (i=0; novomonte > novaterra; i++){
	
	anos = anos + 1;
	novaterra = novaterra + (novaterra * 0.03);
	novomonte = novomonte + (novomonte * 0.02);

}

printf("Nova Terra ira demorar %i anos para ultrapassar Novos Montes \n", anos);

system("pause");

}
